; click-middle =

[module/wifi]
type = internal/network
interface = wlp2s0

interval = 5.0

format-connected =  <label-connected>
format-disconnected = <label-disconnected>

label-connected =  %downspeed:2%  %upspeed:2%
;label-connected = %essid% ↓ %downspeed:2% ↑ %upspeed:2%
label-connected-foreground = ${colors.foreground}

label-disconnected = [Not Connected]
label-disconnected-foreground = ${colors.lightblack}

[module/spotify]
type = custom/script
format = <label>
exec = playerctl metadata --format ' {{artist}}: {{title}}' || echo "Spotify Closed"
tail = true
interval = 1
click-left = "playerctl play-pause"
format-foreground = ${colors.lightgreen}

[module/previous]
type = custom/script
format-background = ${colors.background}
format-foreground = ${colors.foreground}
exec = echo ""
exec-if = "pgrep spotify"
click-left = "playerctl previous"

[module/next]
type = custom/script
format-background = ${colors.background}
format-foreground = ${colors.foreground}
exec = echo ""
exec-if = "pgrep spotify"
click-left = "playerctl next"

[module/cpu]
type = internal/cpu
interval = 0.5

format = <label>
label = %{F#BF616A}%{F-} %percentage%%
;label =  %percentage%

[module/memory]
type = internal/memory
interval = 3

format = <label>
label = %{F#81A1C1}%{F-} %gb_used%

[module/arch]
