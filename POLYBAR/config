[colors]
foreground = ${xrdb:foreground:#fff}
background = ${xrdb:background:#000}
darkred = ${xrdb:color1}
lightred = ${xrdb:color9}
darkblack = ${xrdb:color0}
lightblack = ${xrdb:color8}

[bar/bar]
height = 30
width = 100%
background = ${colors.background}
foreground = ${colors.foreground}

font-0=JetBrains Mono NL:style=Regular:size=10;0
font-1=FontAwesome:style=Regular:size=10;0

padding = 3
module-margin = 1

line-size = 10

modules-left = i3 title
modules-center = pulseaudio spotify previous next
modules-right = wifi date battery

[module/i3]
type = internal/i3
strip-wsnumbers = true
enable-click = false
enable-scroll = false
format = <label-state> <label-mode>
;label-active-font = 1

label-mode = %mode%
label-mode-padding = 1
label-mode-background = #e60053

label-focused = %index%
label-focused-foreground = ${colors.foreground}
label-focused-background = ${colors.lightblack}
label-focused-padding = 1

label-unfocused = %index%
label-unfocused-padding = 1

label-visible = %index%
label-visible-padding = 1

label-urgent = !!
label-urgent-foreground = ${colors.foreground}
label-urgent-background = ${colors.lightred}
label-urgent-padding = 1

[module/battery]
type = internal/battery

full-at = 96

; $ ls -1 /sys/class/power_supply/
battery = BAT0
adapter = ADP0

poll-interval = 5

format-charging = <animation-charging> <label-charging>
format-discharging = <animation-discharging> <label-discharging>

label-charging = %percentage%%
label-discharging = %percentage%%
label-full =  100%

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 

animation-charging-framerate = 750

animation-discharging-0 = 
animation-discharging-1 = 
animation-discharging-2 = 
animation-discharging-3 = 
animation-discharging-4 = 

animation-discharging-framerate = 500

[module/date]
type = internal/date
interval = 1.0

date = %d/%m/%Y%
time = %H:%M
date-alt = %d %b
time-alt = %H:%M

label = %time% | %date%

label-background = ${colors.background}

[module/title]
type = internal/xwindow

format = <label>
format-background = ${colors.background}
format-foreground = ${colors.foreground}
format-padding = 0

label = %title%
label-maxlen = 30

label-empty = Nothing to see here :)
label-empty-foreground = ${colors.foreground}

[module/pulseaudio]
type = internal/pulseaudio

sink = alsa_output.pci-0000_00_1f.3.analog-stereo

use-ui-max = true

interval = 5

format-volume = <ramp-volume> <label-volume>

format-muted = <label-muted>

label-volume = %percentage%%
label-volume-foreground = ${colors.foreground}

label-muted = [Muted]
label-muted-foreground = ${colors.lightblack}

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

; click-right = pavucontrol
; click-middle =

[module/wifi]
type = internal/network
interface = wlp2s0

interval = 5.0

format-connected =  <label-connected>
format-disconnected = <label-disconnected>

label-connected = %essid%
label-connected-foreground = ${colors.foreground}

label-disconnected = [Not Connected]
label-disconnected-foreground = ${colors.lightblack}

[module/spotify]
type = custom/script
format = <label>
exec = playerctl metadata --format ' {{artist}}: {{title}}' || echo "Spotify Closed"
tail = true
interval = 1
click-left = "playerctl play-pause"

[module/previous]
type = custom/script
format-background = ${colors.background}
format-foreground = ${colors.foreground}
exec = echo ""
exec-if = "pgrep spotify"
click-left = "playerctl previous"

[module/next]
type = custom/script
format-background = ${colors.background}
format-foreground = ${colors.foreground}
exec = echo ""
exec-if = "pgrep spotify"
click-left = "playerctl next"